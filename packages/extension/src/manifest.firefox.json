{
  "manifest_version": 2,
  "name": "React Scan",
  "version": "0.0.0",
  "description": "Scan React apps for performance problems",
  "icons": {
    "16": "icons/enabled/16.png",
    "32": "icons/enabled/32.png",
    "48": "icons/enabled/48.png",
    "128": "icons/enabled/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "react-scan@million.dev",
      "strict_min_version": "57.0"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/enabled/16.png",
      "32": "icons/enabled/32.png",
      "48": "icons/enabled/48.png",
      "128": "icons/enabled/128.png"
    }
  },
  "background": {
    "scripts": ["src/background/index.ts"]
  },
  "permissions": ["activeTab", "tabs", "scripting", "storage", "<all_urls>"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/inject/react-scan.ts"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/inject/index.ts"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["icons/*"]
}
